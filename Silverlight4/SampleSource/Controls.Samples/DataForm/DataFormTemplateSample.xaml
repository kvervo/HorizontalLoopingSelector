                        &lt;/StackPanel&gt;
                    &lt;/DataTemplate&gt;
                &lt;/dataform:DataForm.EditTemplate&gt;
            &lt;/dataform:DataForm&gt;
        &lt;/Grid&gt;
    &lt;/StackPanel&gt;
&lt;/UserControl&gt;</sys:String>
