            &lt;ContentControl x:Name="SelectedValue" FontWeight="Bold" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" /&gt;
        &lt;/Grid&gt;
    &lt;/StackPanel&gt;
&lt;/UserControl&gt;</sys:String>
